<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head id="Head1" runat="server">
	<title>@ViewBag.Title</title>

    <link href="@("http://" + Request.Url.Authority + "/Content/Css/Screen.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@("http://" + Request.Url.Authority + "/Content/Css/Print.css")" rel="stylesheet" type="text/css" media="print" />
    <!--[if lt IE 8]><link href="../../Content/Css/Ie.css" rel="stylesheet" type="text/css" /><![endif]-->
    <link href="@("http://" + Request.Url.Authority + "/Content/Css/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@("http://" + Request.Url.Authority + "/Content/Css/jquery-ui-1.8.7.custom.css")" rel="stylesheet" type="text/css" />
	<link href="@("http://" + Request.Url.Authority + "/Content/Css/jquery.ui.autocomplete.css")" rel="stylesheet" type="text/css" />

    <script src="@("http://" + Request.Url.Authority + "/Content/Scripts/jquery-1.4.2.js")" type="text/javascript"></script>
	<script src="@("http://" + Request.Url.Authority + "/Content/Scripts/jquery-ui-1.8.7.custom.min.js")" type="text/javascript"></script>
</head>

<script language="javascript" type="text/javascript">

    $(document).ready(function () {
    	$("#HomeLink").hover(mouseOn, mouseOff);
    	$("#HomeLink").click(function () { window.location = "http://@(ViewBag.UrlAuthority)"; });
    });

    function mouseOn() {
    	$("#HomeLink").addClass("homeHover");
    }

    function mouseOff() {
    	$("#HomeLink").removeClass("homeHover");
    }

</script>

<body>
    <div class="page">

        <div class="container mainContent">
        
            <div class="span-24 last">
                <div class="span-1">&nbsp;</div>
                <div class="span-10 headerLeft" id="HomeLink">&nbsp;</div>
                <div class="span-13 last headerRight">&nbsp;</div>
            </div>
            
            <div class="span-1">&nbsp;</div>

            <div class="span-24 headerBar">
				@RenderSection("Menu", false)
            </div>
            
            <div class="span-24 last mainViewArea mainHeight">
                @*<div class="span-1">&nbsp;</div>
                <div class="span-22">*@
                    @RenderBody()
                @*</div>
                <div class="span-1 last">&nbsp;</div>*@
            </div>

            <div class="span-24 last">&nbsp;</div>

            @*<div class="span-1">&nbsp;</div>*@
            @*<div class="prepend-6 span-10 append-6 footer">*@
            <div class="span-24 last footer">
                @Html.Partial("_footer")
            </div>
            @*<div class="span-1 last"></div>*@
        </div>

        <div>&nbsp;</div>
        <div>&nbsp;</div>

    </div>
</body>
</html>
