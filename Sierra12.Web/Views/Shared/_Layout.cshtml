</head>

<script language="javascript" type="text/javascript">

	$(document).ready(function () {
		$("#menuIconItem").click(function () {
			$("#openMenuItem").toggle();
		});

		$("#headerLogoItem").mouseover(function () {
			$(this).css("cursor", "pointer");
			}, function() {
			$(this).css("cursor", "auto");
		});

		$("#headerLogoItem").click(function () {
			window.location.href = "http://" + window.location.host;
		});
	});

</script>

<body>
    <div class="page">
        
            <div class="header">
				<div class="headerLatin"></div>
				<div id="headerLogoItem" class="headerLogo"></div>
				<div id="menuContainerItem" class="menuContainer">
					<span class="menuTitle">Menu</span>
					<div id="menuIconItem" class="menuIcon"></div>
					<div>
						<ul id="openMenuItem" class="openMenu">
							<li>@Html.ActionLink("Home", "/", "")</li>
							<li>@Html.ActionLink("Classes", "/", "Classes")</li>
							<li>@Html.ActionLink("About", "About", "")</li>
							<li>@Html.ActionLink("Contact", "Contact", "")</li>
						</ul>
					</div>
				</div>
            </div>
            
            <div class="">
				@RenderBody()
            </div>

			<div>&nbsp;</div>
			<div>&nbsp;</div>
			        
            <div class="footer">
				<table>
					<tr>
						<td></td>						
						<td><a class="faceBookLink" href="http://facebook.com/sierra12dsg" target="_blank"><img src="../../Content/Images/facebookicon.jpg" /></a></td>
						<td></td>						
					</tr>
					<tr>
						<td></td>
						<td>&nbsp;</td>
						<td></td>						
					</tr>
					<tr>
						<td>@Html.ActionLink("Classes", "Classes")</td>
						<td>@Html.ActionLink("About", "About")</td>
						<td>@Html.ActionLink("Contact", "Contact")</td>
					</tr>
				</table>
            </div>

			<div>&nbsp;</div>
			<div>&nbsp;</div>

    </div>
</body>
</html>
