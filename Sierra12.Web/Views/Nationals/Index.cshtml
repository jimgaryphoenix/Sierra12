
@inherits System.Web.Mvc.WebViewPage<ProgressTen.Infrastructure.ViewModels.EventListViewModel>
			  
@section Menu{
	@{
		if (Model.IsAuthenticated)
		{
			@Html.Partial("_logoutMenu")
		}
		else
		{
			@Html.Partial("_openMenu")
		}
	 }
}

<div class="span-2">&nbsp;</div>

<div class="span-18 coverBar">

    <h3>2010/2011 USRCCA National Championship Events</h3>

		<div class="span-2 gridHead">Date</div>
		<div class="span-8 gridHead">Event Name</div>
		<div class="span-3 gridHead">Location</div>

		@{
			foreach (var item in Model.Events)
			{
				<div class="span-2">@item.Date.ToString("MM/dd/yyyy")</div>
				<div class="span-8">
					@{
					   if (Model.IsAuthenticated)
					   {
								<a href="@(string.Format("http://{0}/Events/Admin/{1}", Request.Url.Authority, item.EventId))" >@item.Name</a>
					   }
					   else
					   {
								<a href="@(string.Format("http://{0}/Events/{1}", Request.Url.Authority, item.EventId))" >@item.Name</a>
					   }
					}
				</div>
				<div class="span-3"><a href="@item.Location.Url" target="_new" >@item.Location.Name</a></div>
			}
		}

</div>

<div class="span-4 last">&nbsp;</div>
