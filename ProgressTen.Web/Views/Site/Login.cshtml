
@inherits System.Web.Mvc.WebViewPage<ProgressTen.Infrastructure.ViewModels.LoginViewModel>
			  
@{
	ViewBag.Title = "ProgressTen - Login";
}

@section Menu{
	@Html.Partial("_openMenu")
}

<script language="javascript" type="text/javascript">

	$(document).ready(function () {
		$("#EmailAddress").focus();
	});

</script>

<div class="span-6">&nbsp;</div>
<div class="span-10 coverBar">

    <h3>Login</h3>

    <form action="Login" method="post">

        <div class="prepend-1 span-8 last">
			@Html.ValidationMessageFor(m => m.EmailAddress)
			<br />
            @Html.LabelFor(m => m.EmailAddress, "Email Address")
			<br />
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "loginTextBox", id = "EmailAddress" } )
        </div>
		
        <div class="prepend-1 span-8 last">
			@Html.ValidationMessageFor(m => m.Password)
			<br />
            @Html.LabelFor(m => m.Password)
			<br />
            @Html.TextBoxFor(m => m.Password, new { @class = "loginTextBox", type = "password" } )
        </div>
        
        <div class="span-9 last">&nbsp;</div>
        
        <div class="prepend-1 span-8 last">
			<input type="submit" value="Login" />
		</div>
        
        <div class="span-9 last">&nbsp;</div>
        
        <div class="prepend-1 span-8 last">
			@Html.ValidationMessageFor(m => m.FailureMessage)
		</div>

    </form>
        
    <div class="span-9 last">&nbsp;</div>
        
    <div class="prepend-1 span-8 last">
		@Html.ActionLink("Reset Your Password", "ResetPassword")
	</div>

</div>
<div class="span-8 last">&nbsp;</div>

<div class="span-24 last">&nbsp;</div>