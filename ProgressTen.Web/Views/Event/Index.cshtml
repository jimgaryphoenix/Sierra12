
@inherits System.Web.Mvc.WebViewPage<ProgressTen.Infrastructure.ViewModels.EventViewModel>
			  
@section Menu{
	@{
		if (Model.IsAuthenticated)
		{
			@Html.Partial("_logoutMenu")
		}
		else
		{
			@Html.Partial("_openMenu")
		}
	 }
}

<div class="span-4">&nbsp;</div>

<div class="span-14 coverBar">

    <h3>@Model.Name</h3>

	<div class="span-14 last">
		<div class="span-1">&nbsp;</div>
		<div class="span-4">
			@Model.Date.ToString("mm/dd/yyyy")
		</div>
		<div class="span-4">
			@Model.Location.Name
		</div>
		<div class="span-4">
			@{
				if(Model.IsAuthenticated)
				{
					<a href="@(string.Format("http://{0}/Results/Admin/Edit/{1}", Request.Url.Authority, Model.EventId))">Edit Scores</a>
				}
				else
				{
					<a href="@(string.Format("http://{0}/Results/{1}", Request.Url.Authority, Model.EventId))">View Scores</a>
				}
			}
		</div>
		<div class="span-1 last">&nbsp;</div>
	</div>

	<div class="span-14 last">&nbsp;</div>

	<div class="span-3">&nbsp;</div>
	<div class="span-8">
		<img src="@(string.Format("http://{0}/Content/Images/NationalLogos/{1}.jpg" Request.Url.Authority, Model.EventId))" />
	</div>
	<div class="span-3 last">&nbsp;</div>

</div>

<div class="span-4 last">&nbsp;</div>
